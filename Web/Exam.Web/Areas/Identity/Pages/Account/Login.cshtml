@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<form class="auth-form" action="/Identity/Account/Login" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>


    <input asp-for="Input.Username" class="input-field" placeholder="Username" name="Username" />
    <span asp-validation-for="Input.Username" class="text-danger"></span>

    <input asp-for="Input.Password" class="input-field" placeholder="Password" name="Password" />
    <span asp-validation-for="Input.Password" class="text-danger"></span>



    <div class="button-holder">
        <button type="submit" class="orange-link">Log in</button>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
